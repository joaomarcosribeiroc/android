<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefineStandard">
    
    <TextView
        android:id="@+id/TittleForDifineStandarScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TitleForDefineStandard"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/TextSize1"/>

    <TextView
        android:id="@+id/StandardGerminacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginTop1"
        app:layout_constraintTop_toBottomOf="@id/TittleForDifineStandarScreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="@string/StandardGerminação"
        android:textSize="@dimen/TextSize2"
        />
    <EditText
        android:id="@+id/StandardGerminacaoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/StandardGerminacao"/>
    <TextView
        android:id="@+id/StandardVigor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginTop1"

        app:layout_constraintTop_toBottomOf="@id/StandardGerminacaoEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="@string/StandardVigor"
        android:textSize="@dimen/TextSize2"
        />
    <EditText
        android:id="@+id/StandardVigorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/StandardVigor"
        />

    <Button
        android:id="@+id/StandardValuesSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/MarginTop1"

        android:text = "@string/Save"
        android:backgroundTint="@color/ButtonColor"

        android:onClick="saveOnRoom"/>
</androidx.constraintlayout.widget.ConstraintLayout>